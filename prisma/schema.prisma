generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPERVISOR
  MANAGER
  LOGISTIC
  DRIVER
  DISPATCH
  ASSISTANT_MANAGER
}

enum UserLevel {
  MASTER
  ADMIN
  STAFF
}

enum GenericRequestStatus {
  PENDING
  REJECTED
  ACCEPTED
}

enum EventStatus {
  IN_PROCESS
  DONE
  CANCELLED
}


model User {
  id Int @id @default(autoincrement())
  level UserLevel @default(STAFF)
  name String
  email String @unique
  password String

  birthday DateTime
  hireDate DateTime
  phone String
  active Boolean @default(false)
  guardCard Boolean @default(false)

  supervisorCount Int @default(0)
  managerCount Int @default(0)
  logisticCount Int @default(0)
  driverCount Int @default(0)
  dispatchCount Int @default(0)
  assistantManagerCount Int @default(0)

  contactName String?
  contactPhone String?

  eventUserList EventUserList[]
}

model Event {
  id Int @id @default(autoincrement())
  name String
  city String
  state String @default("California")
  zipCode String
  address String

  startDate DateTime
  endDate DateTime
  public Boolean @default(false)
  status EventStatus @default(IN_PROCESS)
  maxUsers Int @default(1)

  eventUsers EventUserList[]
  sections EventSection[]
}

model EventSection {
  id Int @id @default(autoincrement())
  eventId Int
  sectionName String
  description String?
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)

  files SectionFile[]
}

model SectionFile {
  id Int @id @default(autoincrement())
  sectionId Int
  name String
  dataBytes Bytes
  section EventSection @relation(fields: [sectionId], references: [id], onDelete: Cascade)
}

model EventUserList {
  id Int @id @default(autoincrement())
  userId Int 
  eventId Int
  role UserRole
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade)
}